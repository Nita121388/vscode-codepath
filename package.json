{
  "name": "codepath-extension",
  "displayName": "Code Path Marker",
  "description": "Mark and visualize code execution paths with interactive node-based graphs",
  "version": "0.2.0",
  "publisher": "Nita",
  "author": {
    "name": "Nita"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nita121388/vscode-codepath.git"
  },
  "bugs": {
    "url": "https://github.com/Nita121388/vscode-codepath/issues"
  },
  "homepage": "https://github.com/Nita121388/vscode-codepath#readme",
  "keywords": [
    "code-path",
    "execution-path",
    "code-tracking",
    "visualization",
    "mermaid",
    "code-flow",
    "debugging",
    "code-analysis"
  ],
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codepath",
          "title": "CodePath",
          "icon": "images/1faa7.svg"
        }
      ]
    },
    "views": {
      "codepath": [
        {
          "id": "codepath.previewView",
          "name": "预览",
          "type": "webview",
          "contextualTitle": "CodePath 预览"
        }
      ]
    },
    "commands": [
      {
        "command": "codepath.createNode",
        "title": "Mark as New Node",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.createChildNode",
        "title": "Mark as Child Node",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.createParentNode",
        "title": "Mark as Parent Node",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.createBroNode",
        "title": "Mark as Bro Node",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.copyNode",
        "title": "Copy Node",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.pasteNode",
        "title": "Paste Node",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.cutNode",
        "title": "Cut Node",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.moveNodeUp",
        "title": "Move Up",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.moveNodeDown",
        "title": "Move Down",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.switchCurrentNode",
        "title": "Switch Current Node",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.deleteCurrentNode",
        "title": "Delete Current Node",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.deleteCurrentNodeWithChildren",
        "title": "Delete Current Node and Children",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.openPanel",
        "title": "Open CodePath Panel",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.refreshPreview",
        "title": "Refresh Preview",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.createGraph",
        "title": "Create New CodePath",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.switchGraph",
        "title": "Switch CodePath",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.exportGraph",
        "title": "Export CodePath",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.importGraph",
        "title": "Import CodePath",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.deleteGraph",
        "title": "Delete CodePath",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.togglePreviewFormat",
        "title": "Toggle Preview Format",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.validateNodeLocations",
        "title": "Validate Node Locations",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.relocateNode",
        "title": "Relocate Node",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.debugGraphState",
        "title": "Debug Graph State",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.previewGraphFile",
        "title": "预览 CodePath",
        "category": "Code Path Marker"
      },
      {
        "command": "codepath.shareGraphFile",
        "title": "分享 CodePath",
        "category": "Code Path Marker"
      }
    ],
    "submenus": [
      {
        "id": "codepath.submenu",
        "label": "Code Path"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "codepath.submenu",
          "when": "true",
          "group": "navigation@1"
        }
      ],
      "explorer/context": [
        {
          "submenu": "codepath.submenu",
          "when": "true",
          "group": "navigation@1"
        }
      ],
      "codepath.submenu": [
        {
          "command": "codepath.createNode",
          "when": "editorHasSelection || explorerResourceIsFile || explorerResourceIsFolder",
          "group": "1_create@1"
        },
        {
          "command": "codepath.createChildNode",
          "when": "codepath.hasCurrentNode",
          "group": "1_create@2"
        },
        {
          "command": "codepath.createParentNode",
          "when": "codepath.hasCurrentNode",
          "group": "1_create@3"
        },
        {
          "command": "codepath.createBroNode",
          "when": "codepath.hasCurrentNode && (editorHasSelection || explorerResourceIsFile || explorerResourceIsFolder)",
          "group": "1_create@4"
        },
        {
          "command": "codepath.copyNode",
          "when": "codepath.hasCurrentNode",
          "group": "2_edit@1"
        },
        {
          "command": "codepath.pasteNode",
          "when": "codepath.hasClipboardNode",
          "group": "2_edit@2"
        },
        {
          "command": "codepath.cutNode",
          "when": "codepath.hasCurrentNode",
          "group": "2_edit@3"
        },
        {
          "command": "codepath.moveNodeUp",
          "when": "codepath.hasCurrentNode",
          "group": "3_order@1"
        },
        {
          "command": "codepath.moveNodeDown",
          "when": "codepath.hasCurrentNode",
          "group": "3_order@2"
        },
        {
          "command": "codepath.previewGraphFile",
          "when": "resourcePath =~ /\\.codepath.*\\.json$/",
          "group": "4_file@1"
        },
        {
          "command": "codepath.shareGraphFile",
          "when": "resourcePath =~ /\\.codepath.*\\.json$/",
          "group": "4_file@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "codepath.openPanel",
        "key": "ctrl+shift+c"
      },
      {
        "command": "codepath.createNode",
        "key": "ctrl+alt+n"
      },
      {
        "command": "codepath.createChildNode",
        "key": "ctrl+alt+c"
      },
      {
        "command": "codepath.createParentNode",
        "key": "ctrl+alt+p"
      },
      {
        "command": "codepath.refreshPreview",
        "key": "ctrl+shift+r"
      },
      {
        "command": "codepath.switchCurrentNode",
        "key": "ctrl+alt+s"
      },
      {
        "command": "codepath.switchGraph",
        "key": "ctrl+shift+g"
      },
      {
        "command": "codepath.togglePreviewFormat",
        "key": "ctrl+shift+t"
      },
      {
        "command": "codepath.createBroNode",
        "key": "ctrl+alt+b"
      }
    ],
    "configuration": {
      "title": "CodePath",
      "properties": {
        "codepath.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-save for graph changes"
        },
        "codepath.autoLoadLastGraph": {
          "type": "boolean",
          "default": true,
          "description": "Auto-load the last used graph on startup"
        },
        "codepath.previewRefreshInterval": {
          "type": "number",
          "default": 1000,
          "description": "Preview refresh interval in milliseconds"
        },
        "codepath.maxNodesPerGraph": {
          "type": "number",
          "default": 100,
          "description": "Maximum nodes per graph"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vitest": "^3.2.4"
  }
}
